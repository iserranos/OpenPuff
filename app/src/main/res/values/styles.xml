<resources>

    <style name="estiloLayoutInicio">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/fondo</item>
    </style>

    <style name="estiloTituloInicio">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/letraTitulo</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estiloImagenInicio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/fondo</item>
    </style>

    <style name="estiloTextoInicio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:textColor">@color/letraNormal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="estiloLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="estiloImagen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="estiloTextoOculto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/letraNormal</item>
        <item name="android:textColorHint">@color/letraNormal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="estiloContrasenya">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">16</item>
        <item name="android:textColor">@color/letraNormal</item>
        <item name="android:textColorHint">@color/letraNormal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="estiloBotones">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/letraBoton</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


</resources>